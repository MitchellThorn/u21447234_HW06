@model List<u21447234_HW06.ViewModels.ProductsVM>
@using u21447234_HW06.ViewModels

<style>

    .modal-content {
        height: 500px;
        width: 700px;
    }

</style>

<div class="container">
    <h2>Products</h2>

    <div>
        @using (Html.BeginForm("Products", "Home", FormMethod.Post))
        {
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control flex-fill" placeholder="Enter product name..." name="searchString" autocomplete="off" style="margin-left: -14px">
                </div>

                <div class="form-group col-md-2">
                    <button type="submit" class="btn btn-primary w-100" style="margin-left: -100px">Search</button>
                </div>
                <div class="form-group col-md-2">
                    <button type="submit" class="btn btn-success w-100" style="margin-left: -206px">Create</button>
                </div>
            </div>
        }
    </div>

    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Year</th>
                    <th scope="col">Price</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProductsVM product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Year</td>
                        <td>@product.Price</td>
                        <td>@product.Brand</td>
                        <td>@product.Category</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="MyPopUp" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    here are going your controls etc
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                $(".AddPopUp").click(function (e) {
                    $('#MyPopUp').modal('show');
                });
            });
        </script>
    }
</div>
